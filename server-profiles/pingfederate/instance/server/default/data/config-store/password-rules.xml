<?xml version="1.0" encoding="UTF-8"?>
<c:config xmlns:c="http://www.sourceid.org/2004/05/config">

    <!-- Whether or not the password require a combination of upper and lower case letters. Default is true. -->
    <c:item name="requireMixedCase">true</c:item>

    <!-- The minimum password length. Default is 8. -->
    <c:item name="minLength">8</c:item>

    <!-- The minimum number of digits required. Default is 1. -->
    <c:item name="minNumeric">1</c:item>

    <!-- The minimum number of alphabetical characters required. Default is 2. -->
    <c:item name="minAlpha">2</c:item>

    <!-- The minimum number of special characters required. Default is 0. -->
    <c:item name="minSpecial">0</c:item>

    <!-- The list of special characters. Default is !$%^&*()_+|~-=\`{}[]:";'<>?,/. -->
    <c:item name="specialChars"><![CDATA[!$%^&*()_+|~-=\`{}[]:";'<>?,/]]></c:item>

</c:config>